@model BookViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<h6>Are you sure you want to delete this book? This action can not be undone</h6>
<div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PublishedYear" class="control-label"></label>
                <input asp-for="PublishedYear" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" readonly />
            </div>

            <div>
                <form asp-action="DeleteBook">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group text-right mt-5">
                        <button type="submit" class="btn btn-danger btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-trash-alt"></i>
                            </span>
                            <span class="text">Delete</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
